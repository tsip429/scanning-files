#include <stdio.h>

int main (void) {
  int width = 0;
  int pos = 0;
  char c = 'a';
  char ch[1024];
  while (!feof(stdin)) {
    scanf ("%c", &c);
    if (c != '\n') {
      ch[pos] = c;
      width++;
      width = 0;
      scanf ("%c", &c);
      ch[pos] = c;
      while (ch[pos] != '\n') {
	if (ch[pos] == '\t') {
	  width += (8 - (pos + 1)); 
	}else { 
	  width++; 
	}
	pos++;
	scanf ("%c", &c);
	ch[pos] = c;
      }
    }
    c = '\n';
    ch[pos] = c;
    if (width <= 80) {
      printf ("  %4d> ", width); 
    } else if (width > 80) { 
      printf ("X  %4d> ", width); 
    }
    pos = 0;
    while (ch[pos] != '\n') {
      printf ("%c", ch[pos]);
      pos++;
    }
    pos = 0;
    printf ("\n");
    scanf ("%c", &c);
   
  } 
  return 0;
}
